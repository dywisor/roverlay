#deptype sys

# lowest cuda version in portage is 3.2
dev-util/nvidia-cuda-toolkit {
	NVIDIA CUDA Toolkit (>= release 3.0)
	Nvidia CUDAToolkit (>= release 3.0)
	Nvidia's CUDA toolkit (>= release 2.3)
	NVIDIA CUDA Toolkit 3.1 or above
	NVIDIA CUDAtoolkit
}

